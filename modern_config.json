{
  "llm": {
    "provider": "openai",
    "model": "gpt-4",
    "temperature": 0.7,
    "max_tokens": 4000
  },
  "embeddings": {
    "model": "text-embedding-3-small",
    "chunk_size": 1000,
    "chunk_overlap": 200
  },
  "conversation": {
    "max_messages": 20,
    "memory_strategy": "sliding_window"
  },
  "storage": {
    "pdf_root": "./pdfs",
    "embed_root": "./embeddings",
    "conversations_root": "./conversations"
  },
  "rate_limiting": {
    "calls_per_minute": 60
  },
  "search": {
    "max_results": 10
  },
  "chat": {
    "streaming": true
  },
  "retrieval": {
    "max_contexts": 5
  }
}